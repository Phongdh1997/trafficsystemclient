<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_marginStart="16dp"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintTop_toTopOf="parent"
            tools:context="com.hcmut.currentplacedetailsonmap.MapsActivityCurrentPlace" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ic_gps"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_current_location"
            fab:fabCustomSize="44dp"
            fab:borderWidth="0dp"
            fab:elevation="2dp"
            fab:layout_constraintTop_toBottomOf="@id/ctlToolbar"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:maxImageSize="32dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/ctlDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:elevation="3dp"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/icon_start"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:padding="3dp"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toBottomOf="@id/ic_back"
                    fab:srcCompat="@drawable/ic_full_moon" />

                <ImageView
                    android:id="@+id/icon_more"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="8dp"
                    fab:layout_constraintEnd_toEndOf="@id/icon_start"
                    fab:layout_constraintStart_toStartOf="@id/icon_start"
                    fab:layout_constraintTop_toBottomOf="@+id/icon_start"
                    fab:srcCompat="@drawable/ic_more" />

                <ImageView
                    android:id="@+id/icon_end"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toBottomOf="@+id/icon_more"
                    fab:srcCompat="@drawable/ic_end_destination" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_travel_types"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_toEndOf="@id/view"
                    android:layout_toStartOf="@id/tvUnit"
                    android:background="@drawable/bg_rounded_input_field"
                    android:gravity="center"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="20dp"
                    android:text="Khoảng cách ngắn nhất"
                    fab:layout_constraintTop_toBottomOf="@+id/ctlEnd"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintBottom_toBottomOf="parent" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/travel_types_spinner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:entries="@array/travel_types_array"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    fab:layout_constraintEnd_toEndOf="@id/tv_travel_types"
                    fab:layout_constraintStart_toStartOf="@id/tv_travel_types"
                    fab:layout_constraintTop_toBottomOf="@id/tv_travel_types"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctlStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_border"
                    fab:layout_constraintBottom_toBottomOf="@id/icon_start"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintStart_toEndOf="@+id/icon_start"
                    fab:layout_constraintTop_toTopOf="@id/icon_start">

                    <AutoCompleteTextView
                        android:id="@+id/start_location_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:imeOptions="actionSearch"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        fab:layout_constraintBottom_toBottomOf="parent"
                        fab:layout_constraintEnd_toStartOf="@id/ic_clear_start"
                        fab:layout_constraintStart_toStartOf="parent"
                        fab:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ic_clear_start"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_clear"
                        android:visibility="invisible"
                        fab:layout_constraintBottom_toBottomOf="@id/ctlStart"
                        fab:layout_constraintEnd_toEndOf="parent"
                        fab:layout_constraintTop_toTopOf="@id/ctlStart" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ctlEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_border"
                    fab:layout_constraintBottom_toBottomOf="@id/icon_end"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintStart_toEndOf="@+id/icon_end"
                    fab:layout_constraintTop_toTopOf="@id/icon_end">

                    <AutoCompleteTextView
                        android:id="@+id/destination_edt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:imeOptions="actionSearch"
                        android:maxLines="1"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        fab:layout_constraintBottom_toBottomOf="parent"
                        fab:layout_constraintEnd_toStartOf="@id/ic_clear_end"
                        fab:layout_constraintStart_toStartOf="parent"
                        fab:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ic_clear_end"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_clear"
                        android:visibility="invisible"
                        fab:layout_constraintBottom_toBottomOf="@id/ctlEnd"
                        fab:layout_constraintEnd_toEndOf="parent"
                        fab:layout_constraintTop_toTopOf="@id/ctlEnd" />
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Tìm Đường"
                    android:textSize="20sp"
                    fab:layout_constraintBottom_toBottomOf="@id/ic_back"
                    fab:layout_constraintStart_toEndOf="@id/ic_back"
                    fab:layout_constraintTop_toTopOf="@id/ic_back" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_border"
                android:padding="6dp"
                android:text="17:00"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                fab:layout_constraintStart_toStartOf="parent"
                fab:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Vận tốc trung bình: 32km/h"
                android:textColor="#9597a2"
                android:textSize="15sp"
                fab:layout_constraintBottom_toBottomOf="parent"
                fab:layout_constraintStart_toStartOf="parent"
                fab:layout_constraintTop_toBottomOf="@id/tv_date_time"
                fab:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/rating_btn"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button_active"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Đánh giá"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                fab:layout_constraintBottom_toBottomOf="parent"
                fab:layout_constraintEnd_toEndOf="parent"
                fab:layout_constraintTop_toTopOf="@id/tv_date_time"
                fab:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/interact_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="3dp"
            android:background="@drawable/green_border"
            android:visibility="gone"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/interact_txv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:enabled="false"
                    android:text="Chạm lên bản đồ hoặc nhập vào thanh tìm kiếm để chọn địa điểm báo cáo."
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    fab:layout_constraintBottom_toTopOf="@id/agreeBtn"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/agreeBtn"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_button_active"
                        android:clickable="false"
                        android:text="Xác nhận"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/disagreeBtn"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/bg_button_active"
                        android:clickable="false"
                        android:text="Hủy bỏ"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ctlToolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            fab:layout_constraintBottom_toBottomOf="@id/custom_toolbar"
            fab:layout_constraintEnd_toEndOf="@id/custom_toolbar"
            fab:layout_constraintStart_toStartOf="@id/custom_toolbar"
            fab:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/custom_toolbar"
            layout="@layout/toolbar_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="9"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btnOption"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="0"
                android:src="@drawable/ic_home_black_64dp"
                android:background="@drawable/blue_btn"
                fab:layout_constraintStart_toStartOf="parent"
                fab:layout_constraintBottom_toBottomOf="parent"
                fab:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCurrentLocationReport"
                android:text="Cảnh Báo Nhanh"
                android:layout_weight="3"
                android:drawableTop="@drawable/ic_send"
                android:padding="5dp"
                android:textSize="12dp"
                android:textColor="#494949"
                android:background="@drawable/transparent_btn_bg"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCallPhoneReport"
                android:text="Gọi Điện"
                android:layout_weight="3"
                android:drawableTop="@drawable/ic_call_phone"
                android:padding="5dp"
                android:textSize="12dp"
                android:textColor="#494949"
                android:background="@drawable/transparent_btn_bg"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center">

                <Switch
                    android:id="@+id/btnGPSColectionSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SẴN SÀNG"
                    android:textSize="12dp"
                    android:textColor="#494949"
                    android:textStyle="bold"
                    fab:layout_constraintEnd_toEndOf="parent"
                    fab:layout_constraintStart_toStartOf="parent"
                    fab:layout_constraintTop_toBottomOf="@+id/btnGPSColectionSwitch" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/inputFormFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        fab:headerLayout="@layout/nav_header"
        fab:layout_constraintLeft_toLeftOf="parent"
        fab:layout_constraintTop_toTopOf="parent"
        fab:menu="@menu/nav_menu" />

</android.support.v4.widget.DrawerLayout>
