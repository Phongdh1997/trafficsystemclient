<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            tools:layout_editor_absoluteY="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">

                <Button
                    android:id="@+id/btn_report"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Cảnh Báo"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="3"
                    tools:layout_editor_absoluteX="36dp"
                    tools:layout_editor_absoluteY="86dp" />

                <Button
                    android:id="@+id/btnCurrentLocationReport"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:text="Cảnh Báo Vị Trí Hiện Tại"
                    android:layout_weight="3"
                    android:layout_marginEnd="5dp"
                    tools:layout_editor_absoluteX="157dp"
                    tools:layout_editor_absoluteY="98dp" />

                <Button
                    android:id="@+id/btnCallPhoneReport"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:text="Gọi Điện Thoại Cảnh Báo"
                    android:layout_weight="3"
                    tools:layout_editor_absoluteX="272dp"
                    tools:layout_editor_absoluteY="86dp" />
            </LinearLayout>

<!--            add new linear layout for new feature HERE-->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>