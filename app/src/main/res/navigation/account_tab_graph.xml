<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_tab_graph"
    app:startDestination="@id/accountFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.account.AccountFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/non_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
        <action
            android:id="@+id/action_accountFragment_to_settingFragment"
            app:destination="@id/settingFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/non_anim"
            app:popExitAnim="@anim/slide_out_bottom"/>
        <action
            android:id="@+id/action_accountFragment_to_voucherFragment"
            app:destination="@id/voucherFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/non_anim"
            app:popExitAnim="@anim/slide_out_bottom"/>
        <action
            android:id="@+id/action_accountFragment_to_guidingFragment"
            app:destination="@id/guidingFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/slide_in_top"
            app:popExitAnim="@anim/non_anim"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/non_anim"
            app:popExitAnim="@anim/slide_out_bottom" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/voucherFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.voucher.VoucherFragment"
        android:label="VoucherFragment" />
    <fragment
        android:id="@+id/guidingFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.guide.GuidingFragment"
        android:label="GuidingFragment" >
        <action
            android:id="@+id/action_guidingFragment_to_guidingContentFragment"
            app:destination="@id/guidingContentFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/non_anim"
            app:popEnterAnim="@anim/slide_in_top"
            app:popExitAnim="@anim/non_anim"/>
    </fragment>
    <fragment
        android:id="@+id/guidingContentFragment"
        android:name="com.hcmut.admin.bktrafficsystem.ui.guide.GuidingContentFragment"
        android:label="GuidingContentFragment" />
</navigation>